{
	"name": "threadi/easy-language",
	"version": "2.2.1",
	"description": "This plugin adds easy language support to WordPress.",
	"authors": [
		{
			"name": "Thomas Zwirner",
			"email": "tz@laolaweb.com"
		}
	],
	"type": "wordpress-plugin",
	"homepage": "https://laolaweb.com",
	"minimum-stability": "stable",
	"scripts": {
		"post-install-cmd": [
			"\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcsstandards/phpcsutils,vendor/phpcsstandards/phpcsextra"
		],
		"post-update-cmd": [
			"\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcsstandards/phpcsutils,vendor/phpcsstandards/phpcsextra"
		]
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"optimize-autoloader": true,
		"classmap-authoritative": true,
		"apcu-autoloader": true,
		"prepend-autoloader": false
	},
	"require": {
		"php": "^8.0",
		"gettext/gettext": "^5.7",
		"threadi/wp-easy-dialog": "^1.0.6",
		"threadi/wp-easy-setup": "dev-master",
		"threadi/react-dialog": "dev-master"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.1.0",
		"pronamic/wp-documentor": "^1.3"
	}
}
